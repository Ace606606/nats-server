{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            //"args": "${command:pickArgs}",
            "args": [
                "parametr1",
                "--option",
                "value"
            ]
        },

        {
            "name": "Python: Main Script (Hardcoded Args)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/python/test.py",
            "console": "integratedTerminal",
            "args": [
                "input_file.csv",
                "--mode",
                "production",
                "100"
            ]
        }
    ]
}